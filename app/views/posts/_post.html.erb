  <div>
    <% if logged_in? %>
      <%= link_to '+', vote_post_path(post, vote: 'true'), method: 'post', remote: true %>
      |
      <%= link_to '-', vote_post_path(post, vote: 'false'), method: 'post', remote: true %>
    <% end %>
    <span id='<%="post_#{post.id}_votes"%>'><%= post.total_votes %></span>
    <%= render  "shared/post_categories", post: post %>
    <h4><%= link_to post.title, url_with_protocol(post.url) %></h4>
    <p><%= post.description %></p>
    <p>Posted by <%= link_to post.creator.username, user_path(post.creator) %> at <%= display_datetime(post.created_at) %></p>
  <%= link_to pluralize(post.comments.count, "comment"), post %>
  </div>
  <br>