<h3><%= "Comment".pluralize(@post.comments.count) %>:</h3>
<% @post.comments.each do |comment| %>
  <div>
    <% if logged_in? %>
      <%= link_to '+', vote_post_comment_path(@post, comment, vote: 'true'), method: 'post', remote: true %>
      |
      <%= link_to '-', vote_post_comment_path(@post, comment, vote: 'false'), method: 'post', remote: true %>
    <% end %>
    <%= comment.total_votes %>
    <p>
      <%= comment.body %>
    </p>
      by <%= comment.creator.username %> at <%= comment.created_at %>
      <% if creator?(comment) %>
      [<%= link_to "edit comment", edit_post_comment_path(@post, comment) %>]
<% end %>
  </div>
  <br>
<% end %>
