<% if @post.errors.any? %>
<%= render partial: "shared/error", locals: {obj: @post} %>
<% end %>
<%= form_for(@post) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :url %>
    <%= form.text_field :url%>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <%= form.submit "Create post" %>
<% end %>