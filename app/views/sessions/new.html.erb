<h4>Please log in</h4>
<%= form_tag 'login' do %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] || '' %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password] || '' %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>