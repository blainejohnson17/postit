<div class='span0 text-center'>
  <% if logged_in? %>
    <%= link_to polymorphic_path([:vote, obj], vote: true), method: 'post', remote: true  do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    <br/>
  <% end %>
  <span id='<%="#{obj.class.name.downcase}_#{obj.id}_votes"%>'><%= obj.total_votes %></span> votes
  <br/>
  <% if logged_in? %>
    <%= link_to polymorphic_path([:vote, obj], vote: false), method: 'post', remote: true do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  <% end %>
</div>