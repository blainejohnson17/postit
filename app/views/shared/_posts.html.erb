<% @posts.each do |post| %>
    <div>
      <%= render  "shared/post_categories", post: post %>
      <h4><%= link_to post.title, url_with_protocol(post.url) %></h4>
      <p><%= post.description %></p>
      <p>Posted by <%= post.creator.username %> at <%= post.created_at %></p>
    <%= link_to pluralize(post.comments.count, "comment"), post %>
    </div>
    <br>
<% end %>